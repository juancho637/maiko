{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel Maiko API Documentation",
        "contact": {
            "email": "juancho637@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/maiko/public/api"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Login de usuarios para la API",
                "operationId": "App\\Http\\Controllers\\Api\\Auth\\AuthController::login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Muestra el token de autenticación.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "description": "Usuario no autorizado."
                    },
                    "403": {
                        "description": "Usuario no verificado."
                    }
                }
            }
        },
        "/auth/me": {
            "get": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Usuario autenticado",
                "operationId": "App\\Http\\Controllers\\Api\\Auth\\AuthController::me",
                "responses": {
                    "200": {
                        "description": "Muestra el usuario autenticado.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "description": "Usuario no autorizado."
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Elimina el token de autenticación",
                "operationId": "App\\Http\\Controllers\\Api\\Auth\\AuthController::logout",
                "responses": {
                    "200": {
                        "description": "Elimina el token de autenticación.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "description": "Usuario no autorizado."
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/auth/refresh": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Refresca el token de autenticación",
                "operationId": "App\\Http\\Controllers\\Api\\Auth\\AuthController::refresh",
                "responses": {
                    "200": {
                        "description": "Muestra el token de autenticación.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "description": "Usuario no autorizado."
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Autenticación",
            "description": "API Endpoints para la autenticación"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}